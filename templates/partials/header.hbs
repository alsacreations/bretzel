<header class="header" role="banner" data-layout="repel" data-align="center">
  <div class="header-content">
    <h1 class="title-main" id="site-title">
      <img src="/images/bretzel-logo.svg" alt="Bretzel" width="230" height="47" />
    </h1>
    <p class="tagline">Pour avoir la <i>class</i> en Alsace.</p>
  </div>

  {{!-- Theme Switcher --}}
  {{> theme-switcher}}

  {{!-- Burger --}}
  <button
    class="burger-button"
    aria-controls="navigation"
    aria-expanded="false"
  >
    <svg
      class="burger-icon"
      role="img"
      aria-label="Menu"
      focusable="false"
      viewBox="0 0 10 10"
    >
      <rect class="rect-1" />
      <rect class="rect-2" />
      <rect class="rect-3" />
    </svg>
  </button>
</header>
